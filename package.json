{
  "name": "@vp/source",
  "version": "0.0.0-development",
  "license": "Apache-2.0",
  "author": {
    "name": "Vagner Silva",
    "email": "vagner.silva@housix.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VagnerSilva/vp.git"
  },
  "scripts": {
    "prepare": "husky install",
    "release": "release-it",
    "commit": "npx --no -- commitlint --edit",
    "semantic-release": "semantic-release",
    "release2": "multi-semantic-release --debug"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@nx/devkit": "16.10.0",
    "@swc/helpers": "~0.5.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@nx/eslint-plugin": "16.10.0",
    "@nx/jest": "16.10.0",
    "@nx/js": "16.10.0",
    "@nx/linter": "16.10.0",
    "@nx/plugin": "^16.10.0",
    "@nx/workspace": "16.10.0",
    "@release-it-plugins/lerna-changelog": "^6.0.0",
    "@release-it/conventional-changelog": "release-it/conventional-changelog",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@swc-node/register": "~1.6.7",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@types/jest": "^29.4.0",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "~8.46.0",
    "eslint-config-prettier": "8.1.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "lerna": "^7.4.1",
    "multi-semantic-release": "^3.0.2",
    "nx": "16.10.0",
    "prettier": "^2.6.2",
    "release-it": "^16.2.1",
    "semantic-release": "^22.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/release-notes-generator"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "# Changelog",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore(release)",
              "section": "Release"
            }
          ]
        }
      }
    }
  }
}
